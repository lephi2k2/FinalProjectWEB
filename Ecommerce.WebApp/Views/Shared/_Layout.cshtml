    <script>
        function getCartQuantity() {
            $.ajax({
                type: 'GET',
                url: '/cart/count-item',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                // data: data,
                success: function (result) {
                    console.log(result);
                    $("#cartNum").text(result);
                },
                error: function (error) {
                    console.log('Failed ');
                    if(error.status == 401) {
                       $("#cartNum").text('0');
                    }
                }
            })
    }

    $(document).ready(function() {
        getCartQuantity();
    });
    </script>
    
